
		 
<%=bootstrap_form_for(@user) do |f| %>


  
<div class="row fr">
    <div class="col-md-12">
     <h2>Sign Up</h2>
			<hr class="colorgraph">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
                <%= f.text_field :first_name, class: "form-control input-lg", tabindex: "1", placeholder: "First Name",  hide_label: true %>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<%= f.text_field :last_name, class: "form-control input-lg", tabindex: "2", hide_label: true, placeholder: "Last Name" %>
					</div>
				</div>
			</div>
			<div class="form-group">
				<%= f.text_field :email, class: "form-control input-lg", tabindex: "3", hide_label: true, placeholder: "Email Address" %>
			<div class="form-group">
			<%= f.select(:major, options_for_select([['CDM', 'CDM'], ['Business','Business'], ['Law', 'Law'], ['Sciences','Sciences']]))%>
			</div>
			<div class="row">
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						  <%= f.password_field :password, class: "form-control input-lg", tabindex: "4", hide_label: true, placeholder: "Password" %>
					</div>
				</div>
				<div class="col-xs-12 col-sm-6 col-md-6">
					<div class="form-group">
						  <%= f.password_field :password_confirmation, class: "form-control input-lg", tabindex: "5", hide_label: true, placeholder: "Password Confirmation" %>
					</div>
				</div>
			</div>
			<hr class="colorgraph">
			<div class="row">
			  <div class="col-md-3"></div>
			  <div class="col-xs-12 col-md-6">
			  	<%= submit_tag "Register", class: "btn btn-primary btn-block btn-lg", tabindex:"6"%>
				</div>
				 <div class="col-md-3"></div>
				</div>
			</div>
	</div>
</div>
</div>
<% end %>
