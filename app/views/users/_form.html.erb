    </div>
  </div><br>
  <div class="field ">
    <%= f.text_field :email %>
  </div>
  <div class="field ">
    <%= f.select(:major, options_for_select([['CDM', 'CDM'], ['Business','Business'], ['Law', 'Law'], ['Sciences','Sciences']])) %>
  </div>
  <div class="field ">
    <%= f.password_field :password %>
  </div>
  <div class="field ">
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

