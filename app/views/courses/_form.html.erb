
<%= bootstrap_form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row fr">
 	<div class="col-md-12">
    <h2>New Course</h2>
		<hr class="colorgraph">
		<div class="form-group">
      <%= f.select(:major, options_for_select([['CDM', 'CDM'], ['Business','Business'], ['Law', 'Law'], ['Sciences','Sciences']]))%>
		</div>
		<div class="form-group">
			<%= f.text_field :course_num, class: "form-control input-lg", tabindex: "2", hide_label: true, placeholder: "Course Number" %>
		</div>
		<div class="form-group">
			<%= f.text_field :course_name, class: "form-control input-lg", tabindex: "2", hide_label: true, placeholder: "Course Name" %>
		</div>
		<div class="form-group">
			<%= f.select(:day, options_for_select([['MoWe', 'MoWe'], ['TuTh','TuTh']]))%>
		</div>
		<div class="form-group">
			<%= f.select(:time, options_for_select([['8:00AM-9:30AM', '8:00AM-9:30AM'], ['9:40AM-11:10AM','9:40AM-11:10AM'], ['11:20AM-12:30PM','11:20AM-12:50PM'], ['1:00PM-2:30PM','1:00PM-2:30PM'], ['2:40PM-4:10PM','2:40PM-4:10PM']]))%>
		</div>
		<div class="form-group">
			<%= f.select(:room, options_for_select([['CDM Rm 103', 'CDM Rm 103'], ['Student Center Rm 210','Student Center Rm 210'], ['Student Center Rm 230', 'Student Center Rm 230']]))%>
		</div>
		<div class="form-group">
			<%= f.select(:instructor_name, options_for_select([['Winston Smith', 'Winston Smith'], ['Jard Bolt','Jared Bolt'], ['Jessica Down','Jessica Down'], ['Mary Turner','Mary Turner'], ['Bob Burger','Bob Burger']]))%>
		</div>
		<hr class="colorgraph">
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-xs-12 col-md-6">
				<%= f.submit "Add New Course", class: "btn btn-primary btn-block btn-lg", tabindex:"6"%>
			</div>
			<div class="col-md-3"></div>
			</div>
	</div>
</div>
<% end %>
